<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_flowsum_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_flowsum_titile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_flowsum_img"
        android:text="haha"
        android:textColor="#000000"
        android:singleLine="true"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_flowsum_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/iv_flowsum_img"
        android:text="上传:-1.00"
        android:textColor="#99000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_flowsum_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:text="下载:-1.00"
        android:textColor="#99000000"
        android:textSize="15sp" />

</RelativeLayout>