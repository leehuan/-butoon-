<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_appsofaware_titile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内存：  " >
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:gravity="center_horizontal"
>

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_appsofaware_titile"
            android:progress="20"
            android:progressDrawable="@drawable/appmar_proessbar_hrizto" />

        <TextView
            android:id="@+id/tv_appmanger_used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="XX.XXMB已用"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_appmanger_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="XX.XXMB可用"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>